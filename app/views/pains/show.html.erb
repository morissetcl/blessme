            <p><%= @pain.user.username %></p>
            <p><%= @pain.user.city %></p>
            <p><%= @pain.user.religion %></p>
          </div>
        </div>


        <div class="buttons-container">
          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 text-center">
