<div class="cards-wrapper-category">
  <h3 class="title-category text-center">A propos de quoi voulez-vous prier ?</h3>
  <div class="cards-container">
    <div class="row">
      <% Pain::CATEGORIES.each do |category| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= link_to pain_path(category) do %>
            <div class="card-content-category" style="background-image: url('<%= image_url "#{category.downcase}.jpg" %>');">
              <div class="box">
                  <span class="card-text"><strong> <%= category %> <% Array(@pains_group).each do |key, value| %></strong>
                    <% if category == key %>
                    <p><%=pluralize "#{value}", "demande" %></p>
                    <% else %>
                    <% end %>
                  <% end %>
                </span>
              </div>
            </div> 
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

